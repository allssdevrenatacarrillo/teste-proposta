    <template id="allss_assets_fonts" name="Assets Fonts for Sale Order" inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <link href="/reports_with_watermark/static/src/scss/style.scss" rel="stylesheet" type="text/scss"/>
        </xpath>
    </template>


    <!-- Substituição da call padrão do Odoo pela call da cotação customizada da KV -->
    <template id="allss_custom_sale_order" inherit_id="sale.report_saleorder">
        <xpath expr="/t/t/t" position="replace">
            <t t-foreach="docs" t-as="doc">
                <t t-call="reports_with_watermark.allss_report_sale_order" t-lang="doc.partner_id.lang"/>
            </t>    
        </xpath>
    </template>

<template id="allss_report_sale_order">
        <t t-call="web.basic_layout">
            <t t-set="content" t-value="doc.sale_order_template_id.body_html"/>
            <t t-set="body_html" t-value="doc.render_html(content)"/>
            <t t-set="date_order" t-value="doc.date_order"/>

            <div class="header" style="">
                <div class="row">
                <div class="col-sm col-4" style="padding:0px!important;border-top:2px solid #3a8e60;">
                    <div class="logo" style="text-align:left;opacity: 0.15;margin-left:-15px;">
                        <img  t-attf-src="data:image/png;base64,#{doc.sale_order_template_id.footerleft}" width=""/>
                    </div>
                </div>

                <div class="col-sm col-4 text-center" style="padding:0px!important;border-bottom:2px solid #3a8e60;">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>

                <div class="col-sm col-4" style="padding:0px!important;border-bottom:2px solid #3a8e60;">
                    <div class="logo" style="text-align:right;opacity: 0.15;margin-right:-15px;">
                        <img  t-attf-src="data:image/png;base64,#{doc.sale_order_template_id.footerright}" width=""/>
                    </div>
                </div>
                </div>
            </div>

            <div class="page">
                <div class="content_allss" style="">
                    <div t-raw="body_html"></div>
                </div>
            </div>

            <div class="footer" style="">
                <div class="row">
                <div class="col-sm col-4" style="padding:0px!important;border-top:2px solid #3a8e60;">
                    <div class="logo" style="text-align:left;opacity: 0.15;margin-left:-15px;">
                        <img  t-attf-src="data:image/png;base64,#{doc.sale_order_template_id.footerleft}" width=""/>
                    </div>
                </div>

                <div class="col-sm col-4 text-center" style="padding:0px!important;border-bottom:2px solid #3a8e60;">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>

                <div class="col-sm col-4" style="padding:0px!important;border-bottom:2px solid #3a8e60;">
                    <div class="logo" style="text-align:right;opacity: 0.15;margin-right:-15px;">
                        <img  t-attf-src="data:image/png;base64,#{doc.sale_order_template_id.footerright}" width=""/>
                    </div>
                </div>
                </div>
            </div>
        </t>
</template>





