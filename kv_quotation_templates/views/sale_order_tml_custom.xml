<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_kv_custom" model="ir.ui.view">
        <field name="name">sale.order.tml.custom</field>
        <field name="model">sale.order.template</field>
        <field name="inherit_id" ref="sale_management.sale_order_template_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='confirmation']" position="after">
                <page string="Design" name="design">
                    <group string="Imagens">
                        <field name="logo" widget="image" style="width: 40%"/>
                        <field name="header" widget="image" style="width: 100%"/>
                        <field name="footer" widget="image" style="width: 100%"/>
                    </group>
                    <group string="Textos">
                        <field name="body_html"/>
                        <field name="contract_html" invisible="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>