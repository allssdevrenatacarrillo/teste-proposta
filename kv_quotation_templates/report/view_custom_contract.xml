<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_allss_custom_sale_order_contract" model="report.paperformat">
            <field name="name">ALLSS - Contratos de Vendas</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">15</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <report id="action_allss_custom_sale_order_contract"
                model="sale.order"
                report_type="qweb-pdf"
                file="kv_quotation_templates.allss_custom_sale_order_contract"
                name="kv_quotation_templates.allss_custom_sale_order_contract"
                string="ALLSS - Contratos de Vendas"/>

        <record id="action_allss_custom_sale_order_contract" model="ir.actions.report">
            <field name="name">ALLSS - Contratos de Vendas</field>
            <field name="paperformat_id" ref="paperformat_allss_custom_sale_order_contract"/>
            <field name="print_report_name">"contrato-%s-%s.pdf" % (object.name, object.partner_id.name)</field>
        </record>
    </data>

    <template id="allss_custom_sale_order_contract">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <t t-call="kv_quotation_templates.allss_report_sale_order_contract" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <template id="allss_assets_fonts_contract" name="Assets Fonts for Sale Contract" inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <link href="/kv_quotation_templates/static/src/scss/style.scss" rel="stylesheet" type="text/scss"/>
        </xpath>
    </template>

    <template id="allss_report_sale_order_contract">
        <!-- <t t-call="web.basic_layout"> -->
            <t t-set="content" t-value="doc.sale_order_template_id.contract_html"/>
            <t t-set="contract_html" t-value="doc.render_html(content)"/>
            <t t-set="date_order" t-value="doc.date_order"/>
            <div class="header header_allss">
                <div class="row" style="border-bottom: 2px solid #3a8e60;">
                    <div class="col-sm col-9">
                        <div class="seq_date_header"><span>Contrato <span t-field="doc.name"></span> - <span t-esc="date_order.strftime('%d/%m/%Y')"></span></span></div>
                    </div>
                    <div class="col-sm col-3" style="padding:0px!important;">
                        <div class="logo" style="border-left:2px solid #3a8e60;">
                            <img  t-attf-src="data:image/png;base64,#{doc.sale_order_template_id.logo}" width="176"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="page">
                <div class="content_allss">
                    <div t-raw="contract_html"></div>
                </div>
            </div>
            <!-- <div class="line_v"></div> -->
            <!-- <div class="footer footer_allss">
                TESTE TESTE TESTE
            </div> -->
        <!-- </t> -->
    </template>
</odoo>
