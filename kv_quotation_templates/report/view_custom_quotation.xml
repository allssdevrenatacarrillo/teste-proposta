                <section class="page_report">
                    <div class="seq_date_header">
                        <span>Proposta <span t-field="doc.name"></span> - <span t-field="doc.create_date"></span></span>
                    </div>
                    <div class="logo">
                        <img t-attf-src="data:image/png;base64,#{doc.sale_order_template_id.logo}" width="180"/>
