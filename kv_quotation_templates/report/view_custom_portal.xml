<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="allss_assets_fonts" name="Assets Fonts for Sale Order" inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <link href="/kv_quotation_templates/static/src/scss/style.scss" rel="stylesheet" type="text/scss"/>
        </xpath>
    </template>

    <template id="sale_order_custom" inherit_id="sale.sale_order_portal_content">
        <xpath expr="." position="replace">
            <div class="header header_allss">
                <div class="row" style="border-bottom: 2px solid #3a8e60;">
                    <div class="col-sm col-9">
                        <!-- <div class="seq_date_header"><span>Proposta <span t-field="sale_order.name"></span> - <span t-esc="sale_order.date_order.strftime('%d/%m/%Y')"></span></span></div> -->
                        <div class="seq_date_header"></div>
                    </div>
                    <div class="col-sm col-3" style="padding:0px!important;">
                        <div class="logo" style="border-left:2px solid #3a8e60;">
                            <img  t-attf-src="data:image/png;base64,#{sale_order.sale_order_template_id.logo}" width="176"/>
                        </div>
                    </div>
                </div>
                <t t-set="body_html" t-value="sale_order.render_html(sale_order.sale_order_template_id.body_html)"/>
                <div class="page">
                    <div class="content_allss">
                        <div t-raw="body_html"></div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>